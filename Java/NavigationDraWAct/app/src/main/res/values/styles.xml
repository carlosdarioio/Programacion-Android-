<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:searchButtonText">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuButtons" parent="Widget.MaterialComponents.Button">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1100ff</item>
        <item name="colorPrimaryDark">#C7310A</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>


    </style>

    <style name="main_button99">
        <item name="android:fontFamily">@font/my-custom-font</item>
        <item name="android:background">@drawable/ic_launcher_foreground</item>
        <item name="android:textColor">#C01B1B</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
