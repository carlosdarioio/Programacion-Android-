<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FingPickingEnGuia">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:text="Seguimiento de Picking en Guia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/SegPkmXGuiaTxt"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="24sp"
            android:gravity="center"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:id="@+id/Picking" android:hint="Poner Numero de picking"/>

        <Button
            android:id="@+id/btnFindPicking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:drawableRight="@drawable/cfic_find_in_page_black_24dp"
            android:text="Buscar" />

        <TextView
            android:id="@+id/FPENtxtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/FPENlistarNOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>