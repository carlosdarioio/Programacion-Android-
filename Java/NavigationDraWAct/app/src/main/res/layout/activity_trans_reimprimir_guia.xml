<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransReimprimirGuia">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:text="Especificar Numero De Guia De Transferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tem"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="24sp"
            android:gravity="center"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:id="@+id/TRGNguia" android:hint="Poner Guia"/>

        <Button
            android:id="@+id/TRGNbtnImprimir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="Imprimir" />

        <TextView
            android:id="@+id/TRGNtxtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/TRGNlistarNOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>