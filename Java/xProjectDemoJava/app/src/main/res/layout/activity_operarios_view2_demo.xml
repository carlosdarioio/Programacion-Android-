<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E6E6"
    android:orientation="vertical"
    tools:context=".OperariosView2Demo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layutder"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.AppBarLayout>

            <Button
                android:id="@+id/btnMenu"
                style="@android:style/Widget.DeviceDefault.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:drawableBottom="@android:drawable/stat_notify_more"
                android:foregroundGravity="center"
                android:gravity="top|left"
                android:onClick="Menu"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <Button
                android:id="@+id/button"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Dasboard"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


        </LinearLayout>

        <TextView
            android:id="@+id/xOperarios2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Operarios2 TextBoxt Solo"
            android:layout_margin="10dp"
            android:background="@drawable/dotted"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textViewTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tema"
            android:layout_margin="10dp"
            android:background="@drawable/dotted"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />
        <TextView
            android:id="@+id/textViewSubTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SubTema"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            />

        <EditText
        android:id="@+id/Descripcion"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:scrollbars="vertical"
            android:hint="Descripicon"
            android:background="@drawable/dotted"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"

        />

        <Button
            android:id="@+id/btnBoton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dotted"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:text="Button" />

        <Spinner
            android:id="@+id/spinner_Select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</LinearLayout>

