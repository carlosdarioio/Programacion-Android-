<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Get Y Post por enviando variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <TextView
                android:text="response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Respuesta"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editTexttxt"/>
        <Button
                android:text="get var"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnget"/>
        <Button
                android:text="post var"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnpost"/>
        <Button
                android:text="Test1 post solo texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btntest1"/>
        <Button
                android:text="Test1 post texto y lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btntest2"/>
    </LinearLayout>
</RelativeLayout>