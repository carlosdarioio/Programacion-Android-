<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btngettextval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver valor de txt" />

        <Button
            android:id="@+id/btnchanlocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar text aqui" />

        <Button
            android:id="@+id/btn1openclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Class2" />

        <Button
            android:id="@+id/btn1openclass3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Class3" />

        <TextView
            android:id="@+id/madre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Json CLASS:" />

        <Button
            android:id="@+id/btngetjsonclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Getjsonclass" />

        <Button
            android:id="@+id/btntojson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TestPasandoClassTojson" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>